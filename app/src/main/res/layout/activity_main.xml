<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.MainActivity"
    android:padding="8sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewFotoPerfil"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:src="@drawable/user_person_people_6100"
            />
        <EditText
            android:id="@+id/editTextNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Ingrese aqui su Nombre"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/borrarNombre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/eraser_1200"
            />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contenedorMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Escriba su Mensaje"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imagenButtonGaleria"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/ic_menu_gallery"
            />
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/cardview_light_background"/>




    </LinearLayout>


</LinearLayout>









